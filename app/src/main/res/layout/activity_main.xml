<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <EditText
        android:id="@+id/formula"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="left"
        android:textSize="30sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/formula"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">

            <Button
                android:id="@+id/clear"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:text="清除"
                android:textSize="30sp"
                android:textFontWeight="2"/>

            <Button
                android:id="@+id/left_bracket"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="("
                android:textSize="30sp"
                android:layout_toRightOf="@id/clear"
                android:layout_marginLeft="20dp"
                android:textFontWeight="1"/>

            <Button
                android:id="@+id/right_bracket"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text=")"
                android:textSize="30sp"
                android:layout_toRightOf="@id/left_bracket"
                android:layout_marginLeft="20dp"
                android:textFontWeight="1"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">

            <Button
                android:id="@+id/seven"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="30sp"
                android:layout_toRightOf="@id/seven"
                android:layout_marginLeft="20dp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="30sp"
                android:layout_toRightOf="@id/eight"
                android:layout_marginLeft="20dp" />

            <Button
                android:id="@+id/add"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="30sp"
                android:layout_toRightOf="@id/nine"
                android:layout_marginLeft="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">
            <Button
                android:id="@+id/four"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/five"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="30sp"
                android:layout_toRightOf="@id/four"
                android:layout_marginLeft="20dp" />

            <Button
                android:id="@+id/six"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="30sp"
                android:layout_toRightOf="@id/five"
                android:layout_marginLeft="20dp" />

            <Button
                android:id="@+id/minus"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="40sp"
                android:layout_toRightOf="@id/six"
                android:layout_marginLeft="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">
            <Button
                android:id="@+id/one"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/two"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="30sp"
                android:layout_toRightOf="@id/one"
                android:layout_marginLeft="20dp" />

            <Button
                android:id="@+id/three"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="30sp"
                android:layout_toRightOf="@id/two"
                android:layout_marginLeft="20dp" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="x"
                android:textSize="20sp"
                android:layout_toRightOf="@id/three"
                android:layout_marginLeft="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">
            <Button
                android:id="@+id/point"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="30sp" />

            <Button
                android:id="@+id/zero"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="30sp"
                android:layout_toRightOf="@id/point"
                android:layout_marginLeft="20dp" />

            <Button
                android:id="@+id/equal_sign"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="30sp"
                android:layout_toRightOf="@id/zero"
                android:layout_marginLeft="20dp" />

            <Button
                android:id="@+id/divide"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="30sp"
                android:layout_toRightOf="@id/equal_sign"
                android:layout_marginLeft="20dp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>